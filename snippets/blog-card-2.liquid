{% assign a = article %}
<article class="blog-card blog-card--elevated bg-white rounded-md">
  <a href="{{ a.url }}" class="block overflow-hidden">
    {% if a.image %}
      {{ a.image | image_url: width: 900 | image_tag: class: 'w-full h-[240px] md:h-[360px] object-cover' }}
    {% endif %}
  </a>

  {% assign d = a.published_at | date: "%d" %}
  {% assign m = a.published_at | date: "%b" %}
  <div class="relative">
    <div class="date-badge absolute -top-16 left-8 bg-[#71cd13] text-white w-20 h-20 rounded grid place-content-center text-sm font-semibold leading-tight">
      <div class="text-2xl">{{ d }}</div>
      <div class="uppercase text-base">{{ m }}</div>
    </div>
  </div>

  <div class="px-6 pt-8 mt-2 pb-6">
    <h3 class="text-xl font-bold text-gray-800 hover:text-[#71cd13]">
      <a href="{{ a.url }}">{{ a.title | escape }}</a>
    </h3>
    {% if a.excerpt != blank %}
      <p class="mt-2 text-[13px] leading-6 text-[#797979]">{{ a.excerpt | strip_html | truncate: 160 }}</p>
    {% endif %}
    <div class="mt-3 text-[12px] text-[#A7A7A7] flex items-center gap-3">
      <span class="capitalize">
        {{ a.tags | join: ', ' }}</span>
      <span class="opacity-50">|</span>
      <span>{{ a.comments_count }} {{ a.comments_count | pluralize: 'comment', 'comments' }}</span>
    </div>
  </div>
</article>

{% stylesheet %}
  .blog-card .date-badge {
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
  }
  .blog-card--elevated {
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
  }
{% endstylesheet %}