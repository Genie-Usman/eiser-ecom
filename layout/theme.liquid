<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    <style>[x-cloak]{display:none !important;}</style>
    <script src="{{ 'alpinejs_cdn.min.js' | asset_url }}" defer></script>

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  {% include 'kart_discount' %}</head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script src="{{ 'cart-ajax.js' | asset_url }}" defer></script>
    <script src="{{ 'quickview-modal.js' | asset_url }}" defer></script>
    {% comment %} {% render 'quickview' %} {% endcomment %}
    {% render 'ui-toast' %}
  </body>
</html>