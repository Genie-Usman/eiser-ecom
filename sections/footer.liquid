<footer class="bg-[#0D0D1F] text-gray-300 py-16 md:py-20 px-15 overflow-x-hidden">
  <div class="container mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-12 mb-10 w-[90%]">
      {% assign footer_menu = linklists.footer-menu.links %}
      {% for top_link in footer_menu %}
        <div class="footer-col">
          <h4 class="text-white text-lg font-semibold mb-4">{{ top_link.title }}</h4>
          {% if top_link.links.size > 0 %}
            <ul class="space-y-3 mt-10">
              {% for sub_link in top_link.links %}
                <li>
                  <a href="{{ sub_link.url }}" class="hover:text-white text-[#797979] text-sm transition">
                    {{ sub_link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      {% endfor %}

      <!-- Newsletter Column -->
      <div class="w-full ">
        <div class="footer-col">
          <h4 class="text-white text-lg font-semibold mb-4">{{ section.settings.newsletter_heading }}</h4>
          <p class="text-sm mb-3 text-[#797979] w-screen">{{ section.settings.newsletter_subheading }}</p>
          <form class="flex w-[25vw] ">
            <input
              type="email"
              placeholder="Your Email Address"
              class="w-full px-3 py-2 mt-6 h-[8vh] text-sm text-[#797979] bg-[#313140] focus:outline-none focus:ring-2 focus:ring-blue-950 placeholder-[#797979]"
              required />
            <div class="relative top-8 right-10">
              <button type="submit" class="bg-[#71cd13] uppercase text-white px-2 py-2 hover:opacity-90 text-xs font-medium cursor-pointer transition">
                {{ section.settings.newsletter_button }}
              </button>
            </div>
          </form>
        </div>

      </div>
    </div>

    <div class="pt-6 flex flex-col md:flex-row justify-between items-center text-sm text-white">
      <p>
        Copyright ©{{ 'now' | date: "%Y" }} All rights reserved | This template is made with
        <span class="text-white">♡</span>
        by Usman
      </p>
      <div class="flex space-x-4 mt-4 md:mt-0 z-10">
        {% if section.settings.facebook_link != blank %}
          <a
            href="{{ section.settings.facebook_link }}"
            class="hover:bg-[#71cd13] transition-colors bg-[#313140] p-3"
            target="_blank"
            rel="noopener">
            {% render 'icon-facebook' %}
          </a>
        {% endif %}
        {% if section.settings.twitter_link != blank %}
          <a
            href="{{ section.settings.twitter_link }}"
            class="hover:bg-[#71cd13] transition-colors bg-[#313140] p-3"
            target="_blank"
            rel="noopener">
            {% render 'icon-twitter' %}
          </a>
        {% endif %}
        {% if section.settings.dribbble_link != blank %}
          <a
            href="{{ section.settings.dribbble_link }}"
            class="hover:bg-[#71cd13] transition-colors bg-[#313140] p-3"
            target="_blank"
            rel="noopener">
            {% render 'icon-dribble' %}
          </a>
        {% endif %}
        {% if section.settings.behance_link != blank %}
          <a
            href="{{ section.settings.behance_link }}"
            class="hover:bg-[#71cd13] transition-colors bg-[#313140] p-3"
            target="_blank"
            rel="noopener">
            {% render 'icon-behance' %}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  {% schema %}
    {
      "name": "Footer",
      "settings": [
        {
          "type": "url",
          "id": "facebook_link",
          "label": "Facebook URL"
        },
        {
          "type": "url",
          "id": "twitter_link",
          "label": "Twitter URL"
        },
        {
          "type": "url",
          "id": "dribbble_link",
          "label": "Dribbble URL"
        },
        {
          "type": "url",
          "id": "behance_link",
          "label": "Behance URL"
        }, {
          "type": "text",
          "id": "newsletter_heading",
          "label": "Newsletter Heading",
          "default": "Newsletter"
        }, {
          "type": "text",
          "id": "newsletter_subheading",
          "label": "Newsletter Heading",
          "default": "You can trust us. We only send promo offers"
        }, {
          "type": "text",
          "id": "newsletter_button",
          "label": "Newsletter Button Text",
          "default": "Subscribe"
        }
      ],
      "presets": [
        {
          "name": "Footer"
        }
      ]
    }
  {% endschema %}
</footer>