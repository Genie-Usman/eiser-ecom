<section class="bg-white py-20 px-20">
  <div class="container mx-auto">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-[#2A2A2A] mb-10 leading-tight">Get in Touch</h2>

      <div class="grid grid-cols-1 lg:grid-cols-[3fr_2fr] gap-12">
        <!-- Left Column: Contact Form -->
        <div>
          {% form 'contact' %}
            {% if form.posted_successfully %}
              <div class="mb-6 rounded-md border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-700">
                Thank you for contacting us! We'll be in touch soon.
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="mb-6 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                <strong class="font-bold">Error!</strong>
                <span class="block mt-1">Please correct the following errors:</span>
                <ul class="mt-2 list-disc list-inside">
                  {% for field in form.errors %}
                    <li>{{ form.errors.messages[field] }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            <div class="space-y-4">
              <!-- Message Textarea (Top) -->
              <div>
                <label for="ContactFormMessage" class="sr-only">Enter Message</label>
                <textarea
                  id="ContactFormMessage"
                  name="contact[body]"
                  rows="8"
                  class="w-full px-4 py-3 border border-gray-300 rounded text-sm text-[#2A2A2A] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20 resize-y"
                  placeholder="Enter Message"
                  required></textarea>
              </div>

              <!-- Name and Email (Side by side) -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="ContactFormName" class="sr-only">Enter your name</label>
                  <input
                    type="text"
                    id="ContactFormName"
                    name="contact[name]"
                    class="w-full h-12 px-4 border border-gray-300 rounded text-sm text-[#2A2A2A] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
                    placeholder="Enter your name"
                    required>
                </div>
                <div>
                  <label for="ContactFormEmail" class="sr-only">Enter email address</label>
                  <input
                    type="email"
                    id="ContactFormEmail"
                    name="contact[email]"
                    autocorrect="off"
                    autocapitalize="off"
                    class="w-full h-12 px-4 border border-gray-300 rounded text-sm text-[#2A2A2A] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
                    placeholder="Enter email address"
                    required>
                </div>
              </div>

              <!-- Subject Field (Full width) -->
              <div>
                <label for="ContactFormSubject" class="sr-only">Enter Subject</label>
                <input
                  type="text"
                  id="ContactFormSubject"
                  name="contact[subject]"
                  class="w-full h-12 px-4 border border-gray-300 rounded text-sm text-[#2A2A2A] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
                  placeholder="Enter Subject">
              </div>

              <!-- Send Message Button -->
              <button type="submit" class="inline-flex h-11 w-40 cursor-pointer items-center justify-center bg-[#71cd13] hover:bg-transparent border border-[#71cd13] hover:text-[#71cd13] px-6 text-sm font-semibold uppercase tracking-wide text-white transition-colors duration-200 ease-in">
                SEND MESSAGE
              </button>
            </div>
          {% endform %}
        </div>

        <!-- Right Column: Contact Information -->
        <div class="space-y-8">
          <!-- Address Block -->
          <div class="flex items-start gap-4">
            <div class="shrink-0 mt-1 text-[#8F9195] w-6 h-6">
              {% render 'icon-home'
                , class: 'w-6 h-6' %}
            </div>
            <div>
              <p class="text-lg font-semibold text-[#2A2A2A] leading-tight mb-1">
                Buttonwood, California.
              </p>
              <p class="text-sm text-[#8F9195]">
                Rosemead, CA 91770
              </p>
            </div>
          </div>

          <!-- Phone Block -->
          <div class="flex items-start gap-4">
            <div class="shrink-0 mt-1 -ml-1 text-[#8F9195] w-6 h-6">
              {% render 'icon-phone'
                , class: 'w-8 h-8' %}
            </div>
            <div>
              <p class="text-lg font-semibold text-[#2A2A2A] leading-tight mb-1">
                00 (440) 9865 562
              </p>
              <p class="text-sm text-[#8F9195]">
                Mon to Fri 9am to 6pm
              </p>
            </div>
          </div>

          <!-- Email Block -->
          <div class="flex items-start gap-4">
            <div class="shrink-0 mt-1 text-[#8F9195] w-6 h-6">
              {% render 'icon-envelope'
                , class: 'w-7 h-7' %}
            </div>
            <div>
              <p class="text-lg font-semibold text-[#2A2A2A] leading-tight mb-1">
                support@colorlib.com
              </p>
              <p class="text-sm text-[#8F9195]">
                Send us your query anytime!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Contact Page",
    "tag": "section",
    "class": "section-contact-page",
    "settings": [],
    "presets": [
      {
        "name": "Contact Page"
      }
    ]
  }
{% endschema %}