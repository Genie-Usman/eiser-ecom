<section class="bg-gray-50 pt-15 pb-12 px-25 z-99">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div>
        <h1 class="text-2xl font-medium text-gray-900 mb-2">{{ page.title | default: 'Order Tracking' }}</h1>
        <p class="text-[#797979] text-sm mt-3">{{ section.settings.subheading | default: 'Very us move be blessed multiply night' }}</p>
      </div>
      <div class="flex items-center gap-2 text-sm text-[#797979] mt-4 md:mt-0">
        <a href="{{ routes.root_url }}" class="hover:text-[#71cd13] transition-colors">Home</a>
        <span>/</span>
        <span class="text-[#71cd13]">{{ page.title | default: 'Order Tracking' }}</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Tracking Banner",
    "tag": "section",
    "class": "tracking-banner",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Very us move be blessed multiply night"
      }
    ],
    "presets": [
      {
        "name": "Tracking Banner"
      }
    ]
  }
{% endschema %}

