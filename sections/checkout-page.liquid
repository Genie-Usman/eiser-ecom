{% javascript %}
  (() => {

// Toggle returning customer form
    const toggleLogin = document.querySelector('[data-toggle-login]');
    const loginForm = document.getElementById('returning-customer-form');

    if (toggleLogin && loginForm) {
      toggleLogin.addEventListener('click', (e) => {
        e.preventDefault();
        loginForm.classList.toggle('hidden');
      });
    }

// Toggle coupon form
    const toggleCoupon = document.querySelector('[data-toggle-coupon]');
    const couponForm = document.getElementById('coupon-form');

    if (toggleCoupon && couponForm) {
      toggleCoupon.addEventListener('click', (e) => {
        e.preventDefault();
        couponForm.classList.toggle('hidden');
      });
    }

// Toggle shipping address form
    const shipDifferent = document.getElementById('ship-different-address');
    const shippingForm = document.getElementById('shipping-address-form');

    if (shipDifferent && shippingForm) {
      shipDifferent.addEventListener('change', () => {
        shippingForm.classList.toggle('hidden', ! shipDifferent.checked);
      });
    }

// Initialize custom dropdowns
    function initDropdown(dd) {
      if (! dd) return;
      

      const btn = dd.querySelector('.dd-btn');
      const valueEl = dd.querySelector('.dd-value');
      const menu = dd.querySelector('.dd-menu');
      const hiddenInput = dd.nextElementSibling;

      function open() {
        dd.setAttribute('aria-open', 'true');
        btn.setAttribute('aria-expanded', 'true');
      }

      function close() {
        dd.removeAttribute('aria-open');
        btn.setAttribute('aria-expanded', 'false');
      }

      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        if (dd.getAttribute('aria-open') === 'true') 
          close();
         else 
          open();
        

      });

      dd.querySelectorAll('.dd-item').forEach((item) => {
        item.addEventListener('click', (e) => {
          e.preventDefault();
          if (valueEl) 
            valueEl.textContent = item.textContent.trim();
          

          if (hiddenInput && item.dataset.value !== undefined) {
            hiddenInput.value = item.dataset.value;
          }
          close();
        });
      });

      document.addEventListener('click', (e) => {
        if (! dd.contains(e.target)) 
          close();
        

      });

      btn.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') 
          close();
        

      });
    }

    initDropdown(document.getElementById('billing-country-dd'));
    initDropdown(document.getElementById('billing-district-dd'));
    initDropdown(document.getElementById('shipping-country-dd'));
    initDropdown(document.getElementById('shipping-district-dd'));
  })();
{% endjavascript %}

