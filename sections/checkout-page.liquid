{% liquid
  assign section_id = 'section-' | append: section.id
%}

<section id="{{ section_id }}" class="bg-white py-20 px-15">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">

      <div class="lg:col-span-12 space-y-6">
        <!-- Returning Customer Section -->
        <div>
          <div class="bg-gray-50 py-3 px-6">
            <h3 class="text-sm font-normal text-[#2A2A2A]">
              Returning Customer?
              <a
                href="#"
                class="text-[#71cd13] underline"
                data-toggle-login>Click here to login</a>
            </h3>
          </div>
          <div class="py-3 px-6">
            <p class="text-sm text-[#666666] mb-4">
              If you have shopped with us before, please enter your details in the boxes below. If you are a new customer, please proceed to the Billing & Shipping section.
            </p>
          </div>
          <div class="py-3 px-6">
            <div id="returning-customer-form" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <label for="login-username" class="sr-only">Username or Email</label>
                  <input
                    id="login-username"
                    type="text"
                    class="w-full h-10 border border-gray-300 rounded px-3 text-sm text-[#777777] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
                    placeholder="Username or Email *"
                    required>
                </div>
                <div>
                  <label for="login-password" class="sr-only">Password</label>
                  <input
                    id="login-password"
                    type="password"
                    class="w-full h-10 border border-gray-300 rounded px-3 text-sm text-[#777777] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
                    placeholder="Password *"
                    required>
                </div>
              </div>
              <div class="flex items-center flex-wrap gap-3">
                <button type="button" class="h-10 px-6 bg-[#71cd13] text-white text-sm font-medium border border-[#71cd13] hover:bg-transparent hover:text-[#71cd13] transition-colors duration-200 ease-in cursor-pointer">
                  Send Message
