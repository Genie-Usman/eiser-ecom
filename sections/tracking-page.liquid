<section>
  <div class="tracking-page py-20">
    <div class="flex w-full max-w-5xl justify-start flex-col gap-8 px-4 sm:px-6 lg:px-20">
      <p class="text-sm leading-6 text-[#2A2A2A]">
        To track your order please enter your Order ID in the box below and press the "Track" button. This was given to you on your receipt and in the confirmation email you should have received.
      </p>
    </div>
    <div class="flex w-full mt-4 max-w-3xl justify-start flex-col gap-8 px-4 sm:px-6 lg:px-20">
      <form class="space-y-4" data-tracking-form>
        <div>
          <label class="sr-only" for="order-id">Order ID</label>
          <input
            id="order-id"
            name="order"
            type="text"
            class="h-12 w-full border border-gray-200 px-4 text-sm text-[#797979] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
            placeholder="Order ID"
            required>
        </div>
  
        <div>
          <label class="sr-only" for="order-email">Billing Email</label>
          <input
            id="order-email"
            name="email"
            type="email"
            class="h-12 w-full border border-gray-200 px-4 text-sm text-[#797979] placeholder:text-[#A3A3A3] focus:border-[#71cd13] focus:outline-none focus:ring-2 focus:ring-[#71cd13]/20"
            placeholder="Billing Email Address"
            required>
        </div>
  
        <button type="submit" class="inline-flex h-11 w-40 cursor-pointer items-center justify-center bg-[#71cd13] hover:bg-transparent border border-[#71cd13] hover:text-[#71cd13] px-6 text-sm font-semibold uppercase tracking-wide text-white transition-colors duration-200 ease-in">
          Track Order
        </button>
      </form>

    </div>
  </div>

</section>

{% javascript %}
  (() => {
    const form = document.querySelector('[data-tracking-form]');
    if (! form) return;
    


    const feedback = document.querySelector('[data-tracking-feedback]');

    form.addEventListener('submit', (event) => {
      event.preventDefault();

      const orderInput = form.querySelector('#order-id');
      const emailInput = form.querySelector('#order-email');

      if (! orderInput || ! emailInput) return;
      


      const orderId = orderInput.value.trim();
      const email = emailInput.value.trim();

      if (! orderId || ! email) {
        return;
      }

      if (feedback) {
        feedback.hidden = false;
      }

      form.setAttribute('aria-busy', 'true');

      setTimeout(() => {
        form.removeAttribute('aria-busy');
      }, 800);
    });
  })();
{% endjavascript %}

{% schema %}
  {
    "name": "Order Tracking",
    "settings": []
  }
{% endschema %}
{% stylesheet %}
  .tracking-page {
    background: var(--tracking-page-background, inherit);
  }

  .tracking-page form[aria-busy="true"] {
    opacity: 0.7;
    pointer-events: none;
  }
{% endstylesheet %}