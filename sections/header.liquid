<header class="relative w-full top-0 left-0 z-99 transition-colors duration-300" x-data="{ mobileOpen: false }">
  <!-- Top Bar -->
  <div class="hidden md:block bg-neutral-100 h-[30px] leading-4">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between md:px-25 px-4">
        <div>
          <div>
            {% if section.settings.top_phone != blank %}
              <p class="inline-block leading-[15px] text-[#4a4a4a] text-[11px] font-normal uppercase m-0 border-r border-neutral-400 pr-[19px]">{{ section.settings.top_phone }}</p>
            {% endif %}
            {% if section.settings.top_email != blank %}
              <p class="inline-block leading-[15px] text-[#4a4a4a] text-[11px] font-normal uppercase m-0 px-[19px]">{{ section.settings.top_email }}</p>
            {% endif %}
          </div>
        </div>

        <div>
          <ul class="flex items-center py-2 space-x-4">
            {% if section.settings.util_1_label != blank and section.settings.util_1_link != blank %}
              <li>
                <a class="text-[11px] text-[#4a4a4a] border-r pr-[19px] border-neutral-400 uppercase hover:text-[#71cd13]" href="{{ section.settings.util_1_link }}">{{ section.settings.util_1_label }}</a>
              </li>
            {% endif %}
            {% if section.settings.util_2_label != blank and section.settings.util_2_link != blank %}
              <li>
                <a class="text-[11px] text-[#4a4a4a] border-r pr-[19px] border-neutral-400 uppercase hover:text-[#71cd13]" href="{{ section.settings.util_2_link }}">{{ section.settings.util_2_label }}</a>
              </li>
            {% endif %}
            {% if section.settings.util_3_label != blank and section.settings.util_3_link != blank %}
              <li>
                <a class="text-[11px] text-[#4a4a4a] uppercase hover:text-[#71cd13]" href="{{ section.settings.util_3_link }}">{{ section.settings.util_3_label }}</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Menu -->
  <div class="bg-white left-0 w-full h-16 md:h-full border-t border-[#dddddd61]">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center py-2 md:py-1 md:px-25 px-4">
        <!-- Logo -->
        <a class="flex items-center" href="{{ routes.root_url }}">
          {% if section.settings.logo != blank %}
            <img
              class="max-h-10 w-35"
              src="{{ section.settings.logo | image_url: width: 2000 }}"
              alt="{{ shop.name | escape }}"
              height="50"
              width="240">
          {% else %}
            <span class="text-lg font-semibold">{{ shop.name | escape }}</span>
          {% endif %}
        </a>

        <nav class="hidden md:flex space-x-10">
          {% for link in linklists.main-menu-1.links %}
            {% if link.links != blank %}
              <div
                x-data="{ open: false }"
                @mouseenter="open = true"
                @mouseleave="open = false"
                class="relative">
                <button type="button" class="inline-flex items-center uppercase text-[13px] text-neutral-900 hover:text-[#71cd13] cursor-pointer">
                  {{ link.title }}
                </button>

                <div
                  x-show="open"
                  x-transition
                  x-cloak
                  class="absolute ml-24 z-10 transform px-2 w-55 max-w-md sm:px-0 lg:left-1/2 lg:-translate-x-1/2">
                  <div class=" overflow-hidden">
                    <div class="h-2 bg-white"></div>
                    {% for child_link in link.links %}
                      <a href="{{ child_link.url }}" class="border-gray-200 border-b h-12 p-4 flex bg-white items-start hover:text-white hover:bg-[#71cd13]">
                        <div class="ml-3">
                          <p class="text-gray-900 text-[13px] uppercase">
                            {{ child_link.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% else %}
              <div class="relative">
                <a href="{{ link.url }}" class="text-[13px] uppercase text-neutral-900 hover:text-[#71cd13]">{{ link.title }}</a>
              </div>
            {% endif %}
          {% endfor %}
        </nav>

        <!-- Icons (desktop only) -->
        <ul class="hidden md:flex items-center space-x-4">
          <li>
            <a href="{{ routes.search_url }}" class="p-2 hover:text-[#71cd13]">
              {% render 'icon-search' %}
            </a>
          </li>
          <li class="relative">
            <div x-data="{ open: false }" x-cloak>
              <!-- Button to open cart -->
              <button
                type="button"
                @click="open = true"
                class="header__icon relative cursor-pointer inline-flex items-center justify-center p-2 text-base hover:text-[#71cd13]"
                aria-haspopup="dialog"
                :aria-expanded="open.toString()">
                <span class="sr-only">Open cart</span>
                {% render 'icon-cart' %}
                <sup class="absolute -top-1 -right-1 bg-[#71cd13] text-white text-[11px] rounded-full min-w-[18px] h-[18px] px-1 flex items-center justify-center leading-none{% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>
                  {{ cart.item_count }}
                </sup>
              </button>

              <!-- Overlay -->
              <div
                x-show="open"
                x-transition
                class="fixed inset-0 bg-black/40 z-40"
                @click="open = false"></div>

              <!-- Drawer -->
              <aside
                x-show="open"
                x-transition:enter="transition transform duration-300"
                x-transition:enter-start="translate-x-full"
                x-transition:enter-end="translate-x-0"
                x-transition:leave="transition transform duration-300"
                x-transition:leave-start="translate-x-0"
                x-transition:leave-end="translate-x-full"
                class="fixed right-0 top-0 h-full w-96 bg-white shadow-xl z-50">

                <div class="flex justify-between items-center px-4 py-2 border-b">
                  <h2 class="text-lg font-semibold">Your Cart</h2>
                  <button @click="open = false" class="p-2 cursor-pointer">{% render 'icon-close' %}</button>
                </div>

                <div
                  class="p-2 h-full"
                  data-cart-root
                  data-section-id="{{ section.id }}">

                  <div class="overflow-y-auto h-[calc(100%-60px)]">
                    {% if cart.item_count == 0 %}
                      <div class="w-full h-full flex flex-col items-center justify-center text-center py-10">
                        <p class="text-gray-700 text-base mb-4">Your cart is empty.</p>
                        <a href="{{ routes.all_products_collection_url }}" class="px-4 py-2 bg-gray-200 rounded text-sm hover:bg-gray-300">
                          Continue Shopping
                        </a>
                      </div>
                    {% else %}

                      <form
                        action="{{ routes.cart_url }}"
                        method="post"
                        class="mt-6 grid lg:grid-cols-12 gap-8"
                        data-cart-form>

                        <div class="lg:col-span-12">
                          <div class="hidden md:grid grid-cols-12 text-xs font-medium border-b border-gray-200 uppercase tracking-wide text-[#797979] px-1 pb-1">
                            <div class="col-span-7">Product</div>
                            <div class="col-span-2 text-right">Total</div>
                          </div>

                          <div class="max-h-[300px] overflow-y-auto divide-y divide-gray-200 md:border-t-0">
                            {% for item in cart.items %}
                              <div
                                class="px-1 py-2 grid grid-cols-12 items-center gap-5 cart-line"
                                data-line-key="{{ item.key }}"
                                data-variant-id="{{ item.variant_id }}">

                                <a href="{{ item.url }}" class="col-span-2 block w-24 h-24 bg-white border border-gray-200 rounded overflow-hidden shrink-0">
                                  {% if item.image %}
                                    {{ item.image | image_url: width: 200 | image_tag: class: 'w-full h-full object-contain' }}
                                  {% endif %}
                                </a>

                                <div class="col-span-5 min-w-0 space-y-1 ml-10">
                                  <a href="{{ item.url }}" class="text-[#797979] text-xs line-clamp-2 ml-1">{{ item.product.title }}</a>
                                  {% if item.variant.title != 'Default Title' %}
                                    <p class="mt-0.5 text-xs text-[#797979]">{{ item.variant.title }}</p>
                                  {% endif %}

                                  <div class="hidden md:block font-medium text-xs text-left ml-1 text-[#2A2A2A] unit-price">{{ item.final_price | money }}</div>

                                  <div class="relative w-20">
                                    <input
                                      type="number"
                                      min="0"
                                      value="{{ item.quantity }}"
                                      class="cart-qty-input w-full h-[30px] rounded-md font-semibold border border-[#e7e7e7] bg-white pl-3 text-[12px] leading-none text-gray-900 text-left outline-none appearance-none"
                                      data-line-key="{{ item.key }}">

                                    <div class="absolute inset-y-0 right-0 w-[21px] flex flex-col border-l border-[#e7e7e7]">
                                      <button type="button" class="flex-1 grid place-content-center qty-plus hover:bg-gray-100">
                                        {% render 'icon-chevron-up' %}
                                      </button>
                                      <button type="button" class="flex-1 grid place-content-center qty-minus hover:bg-gray-100">
                                        {% render 'icon-chevron-down' %}
                                      </button>
                                    </div>
                                  </div>
                                </div>

                                <div class="col-span-2 text-right text-gray-900 text-sm font-medium line-total">
                                  {{ item.final_line_price | money }}
                                </div>

                                <button
                                  type="button"
                                  class="ml-10 block text-[11px] uppercase tracking-wide text-rose-600 hover:text-rose-700"
                                  data-cart-remove>
                                  {% render 'icon-trash' %}
                                </button>
                              </div>
                            {% endfor %}
                          </div>

                          <div class="mt-4 border-t border-gray-300 ">
                            <div class="my-5 grid px-5 md:grid-cols-1 gap-3 items-center">

                              <div class="flex flex-col items-end gap-2" data-cart-discount-container>


                                <div class="flex items-center gap-3 w-full justify-end" data-cart-discount-group>
                                  <div
                                    class="flex items-center gap-2 bg-[#eafce3] border border-[#71CD14] text-[#2A2A2A] text-xs font-medium rounded-md py-2 px-4"
                                    data-cart-discount-pill
                                    style="{% if cart.discount_applications.size == 0 %}display: none;{% endif %}">


                                    <span data-cart-discount-pill-text class="font-bold text-xs">
                                      {{ cart.discount_applications.first.title }}
                                    </span>

                                    <button
                                      type="button"
                                      aria-label="Remove coupon"
                                      data-cart-remove-discount>
                                      <span class="text-[#71CD14] hover:text-rose-700 cursor-pointer">{% render 'icon-tag' %}</span>
                                    </button>
                                  </div>
                                  <input
                                    data-cart-discount-input
                                    class="h-10 w-30 border border-[#CCCCCC] rounded text-[#2A2A2A] px-3 text-sm focus:border-[#71CD14] outline-none transition-colors"
                                    placeholder="Coupon Code"
                                    aria-label="Discount code">
                                  <button
                                    type="button"
                                    data-cart-apply
                                    class="h-10 cursor-pointer uppercase font-medium px-6 bg-[#71CD14] text-white rounded text-xs hover:bg-[#65b812] transition-colors">
                                    Apply
                                  </button>
                                </div>

                                <p data-cart-discount-feedback class="text-xs hidden text-right font-medium"></p>
                              </div>

                            </div>
                          </div>

                          <div class="flex items-center justify-between px-3 gap-5 text-xs mt-1">
                            <span class="text-gray-900 font-semibold">Subtotal</span>
                            <div class="flex flex-col items-end">
                              <span data-cart-subtotal class="text-gray-900 text-lg font-semibold">
                                {{ cart.total_price | money }}
                              </span>

                              {% if cart.total_discount > 0 %}
                                <span class="text-[#71CD14] text-xs">
                                  Savings: -{{ cart.total_discount | money }}</span>
                              {% endif %}
                            </div>
                          </div>

                          <div class="mt-1 px-5 border-t border-gray-300 pt-4 pb-2">
                            <div class="flex flex-row justify-between gap-2">
                              <button
                                @click="open = false"
                                type="button"
                                class="bg-[#F6F6F6] hover:text-[#0056B3] text-[#2A2A2A] text-xs flex items-center justify-center font-medium rounded-sm cursor-pointer py-1 px-4 h-[44px]">
                                Continue Shopping
                              </button>

                              <button
                                type="submit"
                                name="checkout"
                                class="flex-1 h-[44px] bg-[#71cd13] text-white hover:bg-[#65b812] transition-colors duration-300 ease-in text-xs font-medium rounded-sm cursor-pointer py-1 px-5">
                                Proceed to Checkout
                              </button>
                            </div>
                          </div>

                        </div>
                      </form>
                    {% endif %}
                  </div>
                </div>
              </aside>
            </div>


          </li>
          {% if shop.customer_accounts_enabled %}
            <li>
              <a href="{{ routes.account_url }}" class="text-base p-2 hover:text-[#71cd13]">
                {% render 'icon-account' %}
              </a>
            </li>
          {% endif %}
          {% comment %} {% if section.settings.wishlist_enabled and section.settings.wishlist_link != blank %} {% endcomment %}
          <li>
            <a href="{{ section.settings.wishlist_link }}" class="text-base p-2 hover:text-[#71cd13]">
              {% render 'icon-heart' %}
            </a>
          </li>
        {% comment %} {% endif %} {% endcomment %}
        </ul>

        <!-- Mobile menu button -->
        <button
          type="button"
          class="md:hidden p-2 ml-2 text-blue-800 hover:text-[#71cd13] focus:outline-none"
          @click="mobileOpen = true"
          aria-label="Open menu">
          {% render 'icon-hamburger' %}
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile drawer -->
  <div
    class="fixed inset-0 z-100 md:hidden"
    x-show="mobileOpen"
    x-transition.opacity
    x-cloak
    style="display: none;">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/40" @click="mobileOpen = false"></div>

    <!-- Panel (full screen) -->
    <div
      class="absolute inset-0 h-full w-full bg-white overflow-y-auto"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0">
      <div class="flex items-center justify-between px-5 py-4 border-b border-neutral-200">
        <a
          class="flex items-center"
          href="{{ routes.root_url }}"
          @click="mobileOpen = false">
          {% if section.settings.logo != blank %}
            <img
              class="h-8 w-auto"
              src="{{ section.settings.logo | image_url: width: 600 }}"
              alt="{{ shop.name | escape }}"
              height="32"
              width="120">
          {% else %}
            <span class="text-base font-semibold">{{ shop.name | escape }}</span>
          {% endif %}
        </a>
        <button
          type="button"
          class="p-2 text-neutral-900 hover:text-[#71cd13]"
          @click="mobileOpen = false"
          aria-label="Close menu">
          <!-- Simple X icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <nav class="px-5 py-4">
        <ul class="space-y-1">
          {% for link in linklists.main-menu-1.links %}
            <li>
              {% if link.links != blank %}
                <details class="group">
                  <summary class="cursor-pointer py-3 border-b border-neutral-200 uppercase text-[13px] text-neutral-900 flex items-center justify-between">
                    <span>{{ link.title }}</span>
                    <span class="ml-3 group-open:rotate-180 transition">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M6 9l6 6 6-6" />
                      </svg>
                    </span>
                  </summary>
                  <ul class="pl-3 py-2">
                    {% for child_link in link.links %}
                      <li>
                        <a href="{{ child_link.url }}" class="block py-2 text-[12px] uppercase text-neutral-800 hover:text-[#71cd13] border-b border-neutral-200 pl-3">
                          {{ child_link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </details>
              {% else %}
                <a href="{{ link.url }}" class="block py-3 border-b border-neutral-200 uppercase text-[13px] text-neutral-900 hover:text-[#71cd13]">
                  {{ link.title }}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>

    <!-- Icons removed in full-screen mobile modal to match design -->
    </div>
  </div>
</header>

<script>
        (function(){
          function $all(sel){ return document.querySelectorAll(sel); }
          // Lightweight dropdown initialization (no external deps)
          function initDropdown(dd){
            if (!dd) return;
            var btn = dd.querySelector('.dd-btn');
            var valueEl = dd.querySelector('.dd-value');
            var menu = dd.querySelector('.dd-menu');
            function open(){ dd.setAttribute('aria-open', 'true'); btn.setAttribute('aria-expanded','true'); }
            function close(){ dd.removeAttribute('aria-open'); btn.setAttribute('aria-expanded','false'); }
            btn.addEventListener('click', function(e){
              e.stopPropagation();
              if (dd.getAttribute('aria-open') === 'true') close(); else open();
            });
            dd.querySelectorAll('.dd-item').forEach(function(item){
              item.addEventListener('click', function(e){
                e.preventDefault();
                if (valueEl) valueEl.textContent = item.textContent.trim();
                close();
              });
            });
            document.addEventListener('click', function(e){
              if (!dd.contains(e.target)) close();
            });
            // keyboard
            btn.addEventListener('keydown', function(e){ if (e.key === 'Escape') close(); });
          }
          initDropdown(document.getElementById('dd-country'));
          initDropdown(document.getElementById('dd-state'));
          function syncInputs(idx, newVal){
            var inputs = document.querySelectorAll('[data-qty-input-idx="'+idx+'"]');
            inputs.forEach(function(i){ i.value = newVal; });
            var hidden = document.querySelector('[data-qty-submit-idx="'+idx+'"]');
            if (hidden) hidden.value = newVal;
          }
          $all('[data-qty-minus-idx]').forEach(function(btn){
            btn.addEventListener('click', function(){
              var idx = btn.getAttribute('data-qty-minus-idx');
              var input = document.querySelector('[data-qty-input-idx="'+idx+'"]');
              if (!input) return; var v = parseInt(input.value||'1',10);
              v = Math.max(0, v-1); syncInputs(idx, v);
            });
          });
          $all('[data-qty-plus-idx]').forEach(function(btn){
            btn.addEventListener('click', function(){
              var idx = btn.getAttribute('data-qty-plus-idx');
              var input = document.querySelector('[data-qty-input-idx="'+idx+'"]');
              if (!input) return; var v = parseInt(input.value||'1',10);
              v = Math.max(0, v+1); syncInputs(idx, v);
            });
          });
          // Sync when user types
          $all('[data-qty-input-idx]').forEach(function(input){
            input.addEventListener('input', function(){
              var idx = input.getAttribute('data-qty-input-idx');
              var v = parseInt(input.value||'0',10); if (isNaN(v) || v < 0) v = 0;
              syncInputs(idx, v);
            });
          });
        })();
</script>

