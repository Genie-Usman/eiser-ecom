<section>
  <div class="container mx-auto px-15">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-8 text-center hover:shadow-md transition-all duration-300">
          <div class="flex flex-col items-center">
            <div class="w-10 h-10 text-base mb-3">
              {% if block.settings.icon_image != blank %}
                <img
                  src="{{ block.settings.icon_image | image_url: width: 64 }}"
                  alt="{{ block.settings.title | escape }}"
                  class="w-10 h-10 object-contain"
                  loading="lazy"
                  width="40"
                  height="40">
              {% endif %}
            </div>
            <h3 class="font-medium uppercase text-base mb-2 text-black">
              {{ block.settings.title }}
            </h3>
            <p class="text-gray-500 text-sm leading-relaxed">
              {{ block.settings.subtitle }}
            </p>
          </div>
        </div>
      {% endfor %}

      {% if section.blocks.size == 0 %}
        <p class="text-center text-gray-400 w-full">No features added yet.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature Area",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon image (PNG/JPG preferred)",
          "info": "If set, this image will be used instead of the SVG/html icon."
        },

        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Money Back Guarantee"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "We ensure 100% satisfaction"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Feature Area",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
