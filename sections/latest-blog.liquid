<section class="py-16 md:py-20 px-15">
  <div class="container mx-auto px-4">
    <div class="flex justify-center mb-12 md:mb-16">
      <div class="text-center max-w-2xl px-4">
        <h2 class="text-[18px] md:text-[20px] font-bold mb-3 leading-tight">
          <span class="text-black uppercase">{{ section.settings.title | default: 'latest blog' }}</span>
        </h2>
        <div class="flex justify-center">
          <div class="border-b border-gray-300 w-55"></div>
        </div>
        <p class="text-gray-500 text-xs mt-5 md:text-[14px]">
          {{ section.settings.description | default: 'Bring called seed first of third give itself now ment' }}
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% assign block_article = articles[block.settings.article] %}
          <div {{ block.shopify_attributes }}>
            {% if block_article %}
              {% render 'blog-card', article: block_article %}
            {% else %}
              {% render 'blog-card', title: 'Sample Blog Post', author: 'By Admin', comments: 2, excerpt: 'Let one fifth i bring fly to divided face for bearing the divide unto seed winged divided light Forth.', url: '#' %}
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          {% render 'blog-card', title: 'Ford clever bed stops your sleeping partner hogging the whole', author: 'By Admin', comments: 2, excerpt: 'Let one fifth i bring fly to divided face for bearing the divide unto seed winged divided light Forth.', url: '#' %}
        {% endfor %}
      {% endif %}
    </div>
  </div>

  {% schema %}
    {
      "name": "Latest Blog",
      "tag": "section",
      "class": "latest_blog_area",
      "max_blocks": 12,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "latest blog"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Bring called seed first of third give itself now ment"
        }
      ],
      "blocks": [
        {
          "type": "blog_post",
          "name": "Blog Post",
          "settings": [
            {
              "type": "article",
              "id": "article",
              "label": "Article"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Latest Blog",
          "blocks": [
            { "type": "blog_post" },
            { "type": "blog_post" },
            { "type": "blog_post" }
          ]
        }
      ]
    }
  {% endschema %}
</section>

