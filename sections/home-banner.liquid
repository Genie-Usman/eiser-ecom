<section class="relative z-10 min-h-[500px] md:min-h-[790px] bg-cover bg-center bg-no-repeat mb-15 md:bg-bottom" style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');">
  <div class="relative w-full min-h-[500px] md:min-h-[790px] flex items-center">
    <div class="container mx-auto pl-25 mt-12">
      <div class="relative">
        {% if section.settings.subtitle != blank %}
          <p class="text-[14px] font-medium text-white mb-[10px] uppercase">{{ section.settings.subtitle }}</p>
        {% endif %}

        {% if section.settings.heading_line1 != blank or section.settings.heading_line2 != blank %}
          <h3 class="text-[36px] md:text-[52px] font-bold leading-[44px] md:leading-[60px] mb-[15px] text-white">
            {% if section.settings.heading_highlight_start != blank %}
              <span class="text-[#71cd13]">{{ section.settings.heading_highlight_start }}</span>
            {% endif %}
            {% if section.settings.heading_line1 != blank %}
              {{ section.settings.heading_line1 }}
            {% endif %}
            {% if section.settings.heading_line2 != blank %}
              <br/>{{ section.settings.heading_line2 }}
            {% endif %}
            {% if section.settings.heading_highlight_end != blank %}
              <span class="text-[#71cd13]">{{ section.settings.heading_highlight_end }}</span>
            {% endif %}
          </h3>
        {% endif %}

        {% if section.settings.description != blank %}
          <h4 class="text-[16px] md:text-[18px] text-white mb-0">{{ section.settings.description }}</h4>
        {% endif %}

        {% if section.settings.button_text != blank and section.settings.button_link != blank %}
          <a class="mt-[45px] leading-[50px] rounded-[5px] inline-block font-medium text-[14px] shadow-[0px_10px_20px_0px_rgba(0,0,0,0.1)] px-[30px] no-underline bg-white text-[#333] transition-all duration-300 hover:bg-[#71cd13] hover:text-white hover:-translate-y-[2px] hover:shadow-[0px_15px_25px_0px_rgba(0,0,0,0.2)]" href="{{ section.settings.button_link }}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Home Banner",
    "tag": "section",
    "class": "home-banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image",
        "info": "Recommended size: 1920x790px"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "men Collection"
      },
      {
        "type": "text",
        "id": "heading_highlight_start",
        "label": "Heading Highlight (Start)",
        "default": "Show"
      },
      {
        "type": "text",
        "id": "heading_line1",
        "label": "Heading Line 1",
        "default": "Your"
      }, {
        "type": "text",
        "id": "heading_line2",
        "label": "Heading Line 2",
        "default": "Personal "
      }, {
        "type": "text",
        "id": "heading_highlight_end",
        "label": "Heading Highlight (End)",
        "default": "Style"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Fowl saw dry which a above together place."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "View Collection"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "default": "/collections/all"
      }
    ],
    "presets": [
      {
        "name": "Home Banner"
      }
    ]
  }
{% endschema %}